<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="reprt_template_paperformat"  model="report.paperformat">
            <field name="name">Custom Header</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_template_action" model="ir.actions.report">
            <field name="name">Testing Custom Header</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_header.report_template</field>
            <field name="report_file">custom_header.report_template</field>
            <field name="binding_model_id" ref="model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="custom_header.reprt_template_paperformat"/>
        </record>
    </data>
</odoo>